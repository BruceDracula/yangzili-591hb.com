include<stdio.h>
#include<string.h>

int main(void)
{
 char name[20];
 int width;
 printf("Please input your name:");
 scanf("%s",name);
 printf("A:\"%s\"\n",name);
 printf("B:\"%20s\"\n",name);
 printf("C:\"%-20s\"\n",name);
 width=strlen(name)+3;
 printf("D:\"%*s\"\n",width,name);//*对应width
 return(0);
} 
